{
    "source": {
        "include": "src/**/*.js",
        "excludePattern": "(node_modules|lib|test)"
    },
    "plugins": [
        "plugins/markdown"
    ],
    "opts": {
        "encoding"      : "utf8",
        "destination"   : "dist/docs",
        "export"        : "dist/docs/melonjs.api.json"
    },
    "template": {
        "repository": "@webdoc/default-template",
        "outputSourceFiles": false,
        "readme": "./README.md",
        "repository": "https://github.com/melonjs/melonJS/"
    }
}
