{
    "templates": {
        "systemName": "melonJS",
        "copyright": "Copyright &copy; 2011 - 2019 Olivier Biot",
        "cleverLinks": false,
        "monospaceLinks": false,
        "outputSourcePath": false,
        "outputSourceFiles": false,
        "useCollapsibles": true,
        "logo": {
            "url": "./images/logo.png",
            "width": "100px",
            "height": "85px",
            "link": "index.html"
        },
        "name": "melonJS API documentation",
        "css" : ["styles/melonjs.css"],
        "footerText": " "
    },
    "plugins": ["plugins/markdown"],
        "markdown": {
        "parser": "gfm",
        "hardwrap": false
    },
    "tags": {
        "allowUnknownTags": false,
        "dictionaries": ["jsdoc","closure"]
    },
    "source": {
        "include": ["./README.md", "./build/melonjs.js" ],
        "exclude": [],
        "includePattern": ".+\\.js(doc|x)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "opts": {
        "encoding"      : "utf8",
        "recurse"       : false,
        "lenient"       : false,
        "destination"   : "docs",
        "template"      : "tasks/jsdoc-template/template",
        "new_template"  : "tasks/jsdoc-template/tui-jsdoc-template"
    }
}
