{
  "plugins": ["plugins/markdown"],
  "markdown": {
      "parser": "gfm",
      "hardwrap": true
  },
  "templates": {
    "systemName": "melonJS",
    "copyright": "Copyright &copy; 2011 - 2019 Olivier Biot",
    "cleverLinks": false,
    "monospaceLinks": false,
    "outputSourcePath": true,
    "outputSourceFiles": false
  },
  "source": {
    "include": ["./src/"],
    "exclude": [],
    "includePattern": ".+\\.js(doc|x)?$",
    "excludePattern": "(^|\\/|\\\\)_"
  },
  "opts": {
  "encoding": "utf8",
  "recurse": true
  }
}
